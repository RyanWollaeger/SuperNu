&inputpars

!-- misc
in_grab_stdout = f
in_puretran = f

!-- time step
in_tfirst = 1d-14
in_tlast = 2.1574d-14
in_nt = 100
in_alpha = 1d0

!-- gas grid settings
in_nr = 50
in_isvelocity = f
in_isshell = t
in_novolsrc = t
!!!!!!!!!!!!!!!!!!!!!!!!!!!!in_v0 = 2d8
!!!!!!!!!!!!!!!!!!!!!!!!!!!!in_velout = 1d9
in_l0 = 100d0
in_lr = 5d0
in_totmass = 1d33
in_templ0 = 1d0

!-- flat structure
in_istempflat = t
in_consttempkev = 1d-3
in_solidni56 = t

!-- external source type
in_isanalsrc = f
in_srctype = 'heav'
in_srcmax = 4d24
