!-- group settings
in_wldex = 16
in_iswlread = t
in_ng = 5

!-- particle numbers
in_ns = 100000
in_npartmax = 10000000

!-- imc tally method
in_isimcanlog = f
in_isddmcanlog = t

!-- opacity switches
in_nobbopac = t
in_nobfopac = t
in_noffopac = t

&end

